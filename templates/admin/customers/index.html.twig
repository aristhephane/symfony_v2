{% extends 'base.html.twig' %}

{% block title %}Clients
{% endblock %}

{% block body %}
	<h1>Gerer les clients</h1>
	<div class="customers">
		{% for customer in customers %}
			<div class="customer">
				<h2>{{ customer.firstName }}
					{{ customer.lastName }}</h2>
				<p>Email:
					{{ customer.email }}</p>
				<p>Numero de Telephone:
					{{ customer.phoneNumber }}</p>
				<a href="{{ path('admin_customer_edit', {id: customer.id}) }}">Modifier</a>
			</div>
		{% endfor %}
	</div>
{% endblock %}
