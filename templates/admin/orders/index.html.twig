{% extends 'base.html.twig' %}

{% block title %}Commandes
{% endblock %}

{% block body %}
	<h1>Gerer les commandes</h1>
	<div class="orders">
		{% for order in orders %}
			<div class="order">
				<h2>Commande #{{ order.id }}</h2>
				<p>Etat:
					{{ order.status }}</p>
				<p>Prix Total:
					{{ order.totalPrice }}</p>
				<p>Date de la commande:
					{{ order.orderDate|date('Y-m-d H:i') }}</p>
				<a href="{{ path('admin_order_edit', {id: order.id}) }}">Modifier</a>
			</div>
		{% endfor %}
	</div>
{% endblock %}
